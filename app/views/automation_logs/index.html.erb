<% if @automation_rule.editable? %>
  <div class="contextual">
    <%= link_to l(:label_automation_rules),
                automation_rule_path(id: @automation_rule, project_id: params[:project_id]),
                class: "icon icon-show" %>
  </div>
<% end %>

<%= title @automation_rule.name, l(:label_automation_pipelines), @automation_pipeline.id %>


<% if @automation_logs.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <%= render partial: "list", locals: { entries: @automation_logs }%>
<% end %>
